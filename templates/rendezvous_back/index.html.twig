{% extends 'dashboard/front.html.twig' %}

{% block title %}Rendezvous {% endblock %}

{% block body %}
    <h1> La liste des rendez-vous </h1>
    <!-- Dans votre template Twig -->
<!-- Dans votre template Twig -->
<form id="search-form">
    <input type="text" id="search-input" placeholder="Rechercher par nom de patient..." style="width: 100%;">
</form>




    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nompatient</th>
                <th>Nommedecin</th>
                <th>Date</th>
                <th>Heure</th>
                <th>Etat</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
            {% for rendezvous in pagination %}
            <tr>
                <td>{{ rendezvous.id }}</td>
                <td>{{ rendezvous.nompatient }}</td>
                <td>{{ rendezvous.nommedecin }}</td>
                <td>{{ rendezvous.date ? rendezvous.date|date('Y-m-d') : '' }}</td>
                <td>{{ rendezvous.heure ? rendezvous.heure|date('H:i:s') : '' }}</td>
                <td>
                    {% if not rendezvous.etat %}
                        <span style="color: red;">Non traitée</span>
                    {% else %}
                        <span style="color: green;">Traitée</span>
                    {% endif %}
                </td>
                <td>
                    {% if not rendezvous.etat and not rendezvous.reponse %}
                        <a href="{{ path('app_rendezvous_back_repondre', {'id':rendezvous.id}) }}" class="btn btn-success">Répondre</a>
                    {% elseif rendezvous.reponse %}
                        <a href="{{ path('app_rendezvous_back_show_response', {'id': rendezvous.id}) }}" class="btn btn-primary">Voir la réponse</a>
                    {% endif %}
                    <a href="{{ path('app_rendezvous_back_show', {'id': rendezvous.id}) }}" class="btn btn-primary mr-2">
                        <i class="fas fa-eye"></i> 
                    </a>
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
<!-- Dans votre template Twig, juste avant la fermeture du bloc body -->
<script>
    document.addEventListener("DOMContentLoaded", function() {
        const searchInput = document.getElementById('search-input');
        const tableRows = document.querySelectorAll('.table tbody tr');

        searchInput.addEventListener('input', function(event) {
            const searchTerm = event.target.value.toLowerCase();

            tableRows.forEach(row => {
                const patientName = row.querySelector('td:nth-child(2)').textContent.toLowerCase();

                if (patientName.includes(searchTerm)) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            });
        });
    });
</script>
<div class="pagination-container">
    <ul class="pagination">
        {% if pagination.currentPageNumber > 1 %}
            <li class="page-item">
                <a class="page-link" href="{{ path('app_rendezvous_back_index', {'page': pagination.currentPageNumber - 1}) }}" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                    <span class="sr-only">Previous</span>
                </a>
            </li>
        {% endif %}

        {% for page in range(1, pagination.pageCount) %}
            <li class="page-item {% if page == pagination.currentPageNumber %}active{% endif %}">
                <a class="page-link" href="{{ path('app_rendezvous_back_index', {'page': page}) }}">{{ page }}</a>
            </li>
        {% endfor %}

        {% if pagination.currentPageNumber < pagination.pageCount %}
            <li class="page-item">
                <a class="page-link" href="{{ path('app_rendezvous_back_index', {'page': pagination.currentPageNumber + 1}) }}" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                    <span class="sr-only">Next</span>
                </a>
            </li>
        {% endif %}
    </ul>


{% endblock %}
