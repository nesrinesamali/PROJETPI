{% extends 'dashboard/front.html.twig' %}

{% block title %}Prescription index{% endblock %}

{% block body %}
    
{% for message in app.flashes('notice') %}
    <div class="flash-notice">
        {{ message }}
    </div>
{% endfor %}
{% for message in app.flashes('delete') %}
    <div class="flash-delete">
        {{ message }}
    </div>
{% endfor %}

<h1>Prescription index</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Patient</th>
            <th>Doctor</th>
            <th>Created_at</th>
            <th>Medications</th>
            <th>Instructions</th>
            <th>Pharmacy</th>
            <th>Actions</th> <!-- Corrected typo -->
        </tr>
    </thead>
    <tbody>
    {% for prescription in pagination %}
        <tr>
            <td>{{ prescription.id }}</td>
            <td>{{ prescription.patient }}</td>
            <td>{{ prescription.doctor }}</td>
            <td>{{ prescription.CreatedAt ? prescription.CreatedAt|date('Y-m-d H:i:s') : '' }}</td>
            <td>{{ prescription.medications }}</td>
            <td>{{ prescription.instructions }}</td>
            <td>{{ prescription.pharmacy }}</td>
            <td>
               <div> <a href="{{ path('app_prescription_show', {'id': prescription.id}) }}"class="btn btn-primary">show</a></div>
               <div> <a href="{{ path('app_prescription_edit', {'id': prescription.id}) }}"class="btn btn-info">edit</a>
            </div></td>
        </tr>
    {% else %}
        <tr>
            <td colspan="8">No records found</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
 <div class="pagination-container">
    {{ knp_pagination_render(pagination) }}
</div>
<div class="btn btn-new">
<a href="{{ path('app_prescription_new') }}">Create new</a>
</div>

  <style>
    /* Style for the h1 heading */
    h1 {
        text-align: center;
        color: #0dcaf0; 
        margin-bottom: 20px; /* Add some space below the heading */
    }

    /* Style for the table */
    .table {
        width: 100%;
        border-collapse: collapse;
    }

    .table th,
    .table td {
        padding: 8px;
        border-bottom: 3px solid #dee2e6; /* Border color */
    }

    .table th {
        background-color: #0dcaf0; /* Table header background color */
        font-weight: bold;
        text-align: left;
    }

    .table td {
        text-align: left;
    }
    .flash-notice{ 
        background-color: green;
        color: white;
         padding: 10px 20px;
         text-align: center;
    }
    .flash-delete{
        background-color: red;
        color: white;
         padding: 10px 20px;
         text-align: center;
    }
    /* Style for table actions */
    .table a {
       /*color: #007bff;  Link color */
        text-decoration: none;
        margin-right: 10px; /* Add space between links */
    }

    
    
     
 .btn {
            margin: 10px;
            padding: 10px 20px;
            text-decoration: none;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .btn-primary {
            background-color: #007bff;
        }

        .btn-primary:hover {
            background-color: #0056b3;
        }

        .btn-info {
            background-color: #17a2b8;
        }

        .btn-info:hover {
            background-color: #117a8b;
        }

    .btn-new:hover {
        background-color: #0dcaf0; 
        color: white;/* Darker shade of blue on hover */
    }
    .pagination-container {
    margin-top: 20px;
    display: flex;
    justify-content: center;
    align-items: center;
}

.pagination {
    color: black;
    text-decoration: none;
    padding: 8px 15px;
    list-style: none;
    display: flex;
    justify-content: center;
    align-items: center;
}

.pagination li {
    margin-right: 10px;
}

.pagination li a,
.pagination a {
    color: #333;
    padding: 12px 22px;
    text-decoration: none;
    border-radius: 8px;
    transition: background-color 0.3s ease;
    display: inline-flex;
    justify-content: center;
    align-items: center;
    font-weight: bold;
    font-size: 12px;
    background-color: #f0f0f0;
}

.pagination a.active  {
    font-weight: bold;
    font-size: 14px;
    background-color: #0dcaf0;
    color: #fff;
}

.pagination  a:hover {
    background-color: #0dcaf0;
    color: #fff;
}
    </style>
{% endblock %}
