{% extends 'base.html.twig' %}

{% block title %}New Prescription{% endblock %}

{% block body %}

    <div class="content-container">
        <h1 class="page-title">Create new Prescription</h1>

        <div class="form-container">
            <form class="prescription-form">
                <div class="form-group">
                    <label for="prescription_patient" class="required">Patient</label>
                    <input type="text" id="prescription_patient" name="prescription[patient]" required maxlength="255" class="form-control">
                </div>
                <div class="form-group">
                    <label for="prescription_doctor" class="required">Doctor</label>
                    <input type="text" id="prescription_doctor" name="prescription[doctor]" required maxlength="255" class="form-control">
                </div>
                <div class="form-group">
                    <label class="required">Created at</label>
                    <div class="form-row">
                        <div class="col">
                            <select id="prescription_Created_at_date_month" name="prescription[Created_at][date][month]" class="form-control">
                                <!-- Options for month -->
                            </select>
                        </div>
                        <div class="col">
                            <select id="prescription_Created_at_date_day" name="prescription[Created_at][date][day]" class="form-control">
                                <!-- Options for day -->
                            </select>
                        </div>
                        <div class="col">
                            <select id="prescription_Created_at_date_year" name="prescription[Created_at][date][year]" class="form-control">
                                <!-- Options for year -->
                            </select>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="prescription_medications">Medications</label>
                    <textarea id="prescription_medications" name="prescription[medications]" class="form-control"></textarea>
                </div>
                <div class="form-group">
                    <label for="prescription_instructions">Instructions</label>
                    <textarea id="prescription_instructions" name="prescription[instructions]" class="form-control"></textarea>
                </div>
                <div class="form-group">
                    <label for="prescription_pharmacy">Pharmacy</label>
                    <input type="text" id="prescription_pharmacy" name="prescription[pharmacy]" maxlength="255" class="form-control">
                </div>
                <input type="hidden" id="prescription__token" name="prescription[_token]" value="2244d.ZNeneDpOA_vPSdy5XvQI3AIDT8U8B-htdY0UZAl87Ss.Ip_TDlJ8T5KFPq7_FL1brjZnKaNwbYw1GuNtUHkamnoMneIVWSIyqIAumQ">
                <button class="btn btn-primary btn-block">Save</button>
            </form>
        </div>

        <a href="{{ path('app_prescription_index') }}" class="back-link">Back to List</a>
    </div>

    <style>
        /* Center the content */
        .content-container {
            max-width: 500px;
            margin: 0 auto;
            text-align: center;
        }

        /* Center the page title */
        .page-title {
            color: lightblue;
        }

        /* Style for the form container */
        .form-container {
            margin-top: 20px; /* Adjust the margin as needed */
            padding: 20px;
            background-color: #f9f9f9; /* Add background color */
            border: 1px solid #ccc; /* Add border */
            border-radius: 5px; /* Add border radius */
        }

        /* Style for the back link */
        .back-link {
            display: block;
            margin-top: 20px;
            color: #007bff;
            text-decoration: none;
        }

        .back-link:hover {
            text-decoration: underline;
        }

        /* Style for form groups */
        .form-group {
            margin-bottom: 20px;
        }

        /* Style for form rows */
        .form-row {
            display: flex;
        }

        /* Style for form columns */
        .col {
            flex: 1;
            margin-right: 5px;
        }
    </style>

{% endblock %}
