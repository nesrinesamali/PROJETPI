{% extends 'dashboard/front.html.twig' %}

{% block title %}User index
{% endblock %}

{% block body %}
	<h1>User index</h1>
	<center>
		<a class="btn btn-primary" href="https://localhost:8000/pdf"/>
		PDF
	</a>
	<form method="get" class="col mb-4 p-3">
		<div class="form-group">
			<input type="text" class="form-control" name="search" {% if app.request.query.has('search') %} value="{{ app.request.query.get('search') }}" {% endif %}>

		</div>
		<button class="btn btn-primary mt-2">Chercher</button>
	</form>
	<table class=" table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Email</th>
				<th>Roles</th>
				<th>Password</th>
				<th>Nom</th>
				<th>Prenom</th>
				<th>Typemaladie</th>
				<th>Specialite</th>
				<th>Groupesanguin</th>
				<th>Statuteligibilite</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>

			{% for user in users %}
				<tr>
					<td>{{ user.id }}</td>
					<td>{{ user.email }}</td>
					<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
					<td>{{ user.password }}</td>
					<td>{{ user.nom }}</td>
					<td>{{ user.prenom }}</td>
					<td>{{ user.typemaladie }}</td>
					<td>{{ user.specialite }}</td>
					<td>{{ user.groupesanguin }}</td>
					<td>{{ user.statuteligibilite }}</td>
					<td>
						<a href="{{ path('app_user_show', {'id': user.id}) }}">show</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="11">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

{% endblock %}
