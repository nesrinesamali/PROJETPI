{% extends 'dashboard/front.html.twig' %}

{% block title %}CentreDon{% endblock %}

{% block body %}
    <h1>CentreDon</h1>
    <div class="col-lg-6" style="width: 120%;">

        <div class="card">
          <div class="card-body" >
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ centre_don.id }}</td>
            </tr>
            <tr>
                <th>NomCentre</th>
                <td>{{ centre_don.NomCentre }}</td>
            </tr>
            <tr>
                <th>DateOuverture</th>
                <td>{{ centre_don.DateOuverture ? centre_don.DateOuverture|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Datefermeture</th>
                <td>{{ centre_don.datefermeture ? centre_don.datefermeture|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Gouvernorat</th>
                <td>{{ centre_don.gouvernorat }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ centre_don.adresse }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ centre_don.email }}</td>
            </tr>
            <tr>
                <th>Numero</th>
                <td>{{ centre_don.Numero }}</td>
            </tr>
        </tbody>
    </table>
    
    <div class="d-flex justify-content-center mb-3">
        <a href="{{ path('app_centre_don_edit', {'id': centre_don.id}) }}"class="btn btn-outline-success mx-2" > <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>edit</a>
        <a href="{{ path('app_centre_don_index') }}"class="btn btn-outline-dark mx-2" > <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>Back</a>
        {{ include('centre_don/_delete_form.html.twig') }}
    </div>
</div>
</div>
</div>
{% endblock %}
