<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
<form id="deleteForm" method="post" action="{{ path('app_centre_don_delete', {'id': centre_don.id}) }}">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ centre_don.id) }}">
    <button id="deleteButton" class="btn btn-outline-danger btn-sm mx-2"> <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>Delete</button></form>
<script>
    document.getElementById('deleteButton').addEventListener('click', function(event) {
        event.preventDefault();

        Swal.fire({
            title: 'Are you sure?',
            text: "You won't be able to revert this!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, delete it!'
        }).then((result) => {
            if (result.isConfirmed) {
                fetch('{{ path('app_centre_don_delete', {'id': centre_don.id}) }}', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded'
                    },
                    body: new URLSearchParams({
                        '_token': '{{ csrf_token('delete' ~ centre_don.id) }}'
                    })
                }).then(response => {
                    if (response.ok) {
                        Swal.fire(
                            'Deleted!',
                            'Your file has been deleted.',
                            'success'
                        );
                    } else {
                        Swal.fire(
                            'Error!',
                            'An error occurred while deleting the item.',
                            'error'
                        );
                    }
                });
            }
        });
    });
</script>