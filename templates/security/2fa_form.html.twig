{% extends 'base.html.twig' %}

{% block title %}2FA - FitKeep{% endblock %}

{% block header %}
    {# Header content can be added here if needed #}
{% endblock %}

{% block footer %}
    {# Footer content can be added here if needed #}
{% endblock %}

{% block sidebar %}
    {# Sidebar content can be added here if needed #}
{% endblock %}

{% block content %}

<div class="container">
    <section class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-4">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-4 col-md-6 d-flex flex-column align-items-center justify-content-center">
                    <div class="d-flex justify-content-center py-4">
                        <a href="{{path('app_logout')}}" class="logo d-flex align-items-center w-auto">
                            <img src="assets/img/logo.png" alt="">
                            <span>FitKeep</span>
                        </a>
                    </div><!-- End Logo -->

                    <div class="card mb-3">

                        <div class="card-body">
                            <div class="pt-4 pb-2">
                                <h5 >Second Authentication</h5>
                                
                            </div>

                           
                            <form class="form" action="/2fa_check" method="post">
                                <p class="text-center small">You received a 6-character code in your email</p>
                                <p class="widget">
                                    <input id="_auth_code" class="form-control" type="text" maxlength="6" placeholder="Enter authentication code" name="_auth_code" autocomplete="one-time-code"
                                        autofocus="">
                                </p>

                                <p class="widget"><label for="_trusted"><input id="_trusted" type="checkbox"
                                            name="_trusted"> I'm on a trusted computer</label></p>
                                <p><input class="btn btn-primary" type="submit" value="Login">
                                <button class="btn btn-danger"><a href="{{path('app_logout')}}" style="color: white;">Cancel</a></button></p>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

{% endblock %}
