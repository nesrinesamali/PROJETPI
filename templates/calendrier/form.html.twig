        {{ form_errors(form.jourFeries) }}
    </div>

    <div class="mb-3">
        <label for="{{ form.infos.vars.id }}" class="form-label">infos</label>
        {{ form_widget(form.infos, {'attr': {'class': 'form-control infospicker'}, 'required': true}) }}
        {{ form_errors(form.infos) }}
