  {{ form_label(form.idMedecin, 'idMedecin', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.idMedecin, {'attr': {'class': 'form-control', ' oninput': 'showAlert(this, "id-alert")'}}) }}
  <div class="alert-danger mt-2" id="nom-alert" style="display:none;">Le id ne peut contenir que des chiffres.</div>
    </div>

