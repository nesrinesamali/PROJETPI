{% extends 'base.html.twig' %}

{% block body %}

  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <div class="card">
          <div class="card-header">
            <h1 class="text-center">Edit calendrier</h1>
          </div>
          <div class="card-body">
            {{ include('calendrier/form.html.twig', {'button_label': 'Update'}) }}
            <hr>
            <form method="post" action="{{ path('calendrier_delete', {'id': calendrier.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
              <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ calendrier.id) }}">
              <button class="btn btn-danger"><i class="fas fa-trash-alt"></i> Delete</button>
            </form>
            <a href="{{ path('calendrier_index') }}" class="btn btn-secondary mt-3"><i class="fas fa-arrow-left"></i> Back to list</a>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}