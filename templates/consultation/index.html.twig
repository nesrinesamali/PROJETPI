
{# templates/consultation/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Liste des Consultations{% endblock %}

{% block body %}
    <h1>Liste des Consultations <a href="{{ path('consultation_new') }}" class="btn btn-success">Ajouter</a></h1>

    {% if consultations|length > 0 %}
        <table>
            <thead>
                <tr>
                    <th>ID Consultation</th>
                    <th>ID Médecin</th>
                    <th>ID Patients</th>
                    <th>Date</th>
                    <th>Durée</th>
                    <th>Diagnostique</th>
                    <th>Recommandations</th>
                    <th>Action</th> 

                </tr>
            </thead>
            <tbody>
                {% for consultation in consultations %}
                    <tr>
                        <td>{{ consultation.id }}</td>
                        <td>{{ consultation.idMedecin }}</td>
                        <td>{{ consultation.idPatients }}</td>
                        <td>{{ consultation.date|date('Y-m-d H:i:s') }}</td>
                        <td>{{ consultation.duree }}</td>
                        <td>{{ consultation.diagnostique }}</td>
                        <td>{{ consultation.recommandations }}</td>
                        <td>
                            <a href="{{ path('consultation_edit', {'id': consultation.id}) }}">Update</a>
 <form action="{{ path('consultation_delete', {'id': consultation.id}) }}"  class="d-inline">
                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette calendrier?')">
                                <i class="fa fa-trash"></i> Supprimer
                            </button>                            </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>Aucune consultation disponible.</p>
    {% endif %}
{% endblock %}