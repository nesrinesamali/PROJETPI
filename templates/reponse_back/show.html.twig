{% extends 'dashboard/front.html.twig' %}

{% block title %}Response{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Custom styles for Response page */

        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h1 {
            color: #333;
            text-align: center;
            margin-bottom: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        th, td {
            padding: 10px;
            border-bottom: 1px solid #ccc;
            text-align: left;
        }

        th {
            background-color: #f4f4f4;
            color: #333;
            font-weight: bold;
        }

        .btn {
            display: inline-block;
            padding: 8px 16px;
            margin-right: 10px;
            background-color: #007bff;
            color: #fff;
            text-decoration: none;
            border-radius: 4px;
            transition: background-color 0.3s;
        }

        .btn:hover {
            background-color: #0056b3;
        }

        .btn-edit {
            background-color: #28a745;
        }

        .btn-delete {
            background-color: #dc3545;
        }

        .back-link {
            display: block;
            color: #007bff;
            text-decoration: none;
            margin-top: 20px;
        }

        .back-link:hover {
            text-decoration: underline;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <h1>Response</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ reponse.id }}</td>
                </tr>
                <tr>
                    <th>Date</th>
                    <td>{{ reponse.date ? reponse.date|date('Y-m-d') : '' }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ reponse.description }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_reponse_back_index') }}" class=" btn btn-primary">Back to List</a>
        <div>
            <a href="{{ path('app_reponse_back_edit', {'id': reponse.id}) }}" class="btn btn-secondary">Edit</a>

            {{ include('reponse_back/_delete_form.html.twig') }}
        </div>

        <a href="#" class="back-link">&#8592; Go Back</a>
    </div>
{% endblock %}
